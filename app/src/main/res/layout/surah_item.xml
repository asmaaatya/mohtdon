<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/spacing_small"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/surahInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_surah_num"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/spacing_small"
                android:background="@drawable/surahnum_icon"
                android:fontFamily="@font/cairo_bold"
                android:gravity="center"
                android:text="114"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/spacing_too_small">

                <TextView
                    android:id="@+id/tvSurahName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/surah_name"
                    android:textColor="@color/green_text"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSurahType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_too_small"
                        android:fontFamily="@font/cairo_bold"
                        android:text="مكيه"
                        android:textColor="@color/green_subtitle_text"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_bold"
                        android:text="|"
                        android:layout_marginEnd="@dimen/spacing_too_small"
                        android:textColor="@color/green_subtitle_text"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvVerseNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:fontFamily="@font/cairo_bold"
                        android:text="ايات"
                        android:textColor="@color/green_subtitle_text"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_small"
            android:src="@drawable/rounded_arrow" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_color" />
    </RelativeLayout>
</layout>